<div class="max-w-md mx-auto">
  <h1 class="text-2xl font-semibold text-slate-50 mb-2">Reset your password</h1>
  <p class="text-sm text-slate-400 mb-6">
    Enter your email and weâ€™ll send you a reset link.
  </p>

  <% if (error && error.length) { %>
    <div class="mb-4 rounded-lg bg-red-100 text-red-700 px-4 py-3">
      <%= error[0] %>
    </div>
  <% } %>

  <% if (success && success.length) { %>
    <div class="mb-4 rounded-lg bg-emerald-100 text-emerald-700 px-4 py-3">
      <%= success[0] %>
    </div>
  <% } %>

  <form action="/forgot-password" method="POST" class="space-y-4">
    <input
      type="email"
      name="email"
      required
      placeholder="Email address"
      class="w-full h-[52px] rounded-lg bg-slate-950 border border-slate-700 px-4 text-slate-50"
    />

    <button class="w-full py-3 rounded-xl bg-emerald-500 text-slate-950 font-semibold">
      Send reset link
    </button>
  </form>
</div>

