<div class="max-w-md mx-auto">
  <h1 class="text-2xl font-semibold text-slate-50 mb-4">Set a new password</h1>

  <% if (error && error.length) { %>
    <div class="mb-4 bg-red-100 text-red-700 px-4 py-3 rounded-lg">
      <%= error[0] %>
    </div>
  <% } %>

  <% if (success && success.length) { %>
  <div class="mb-4 bg-emerald-100 text-emerald-700 px-4 py-3 rounded-lg">
    <%= success[0] %>
  </div>
  <% } %>

  <form method="POST" action="/reset-password/<%= token %>" class="space-y-4">
    <input
      type="password"
      name="password"
      placeholder="New password"
      required
      minlength="8"
      class="w-full h-[52px] rounded-lg bg-slate-950 border border-slate-700 px-4 text-slate-50"
    />

    <input
      type="password"
      name="confirmPassword"
      placeholder="Confirm password"
      required
      minlength="8"
      class="w-full h-[52px] rounded-lg bg-slate-950 border border-slate-700 px-4 text-slate-50"
    />

    <button class="w-full py-3 rounded-xl bg-emerald-500 text-slate-950 font-semibold">
      Reset password
    </button>
  </form>
</div>
