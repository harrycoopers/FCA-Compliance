    <form action="<%= (currentUser ? '/terms/accept' : '/register') %>" method="POST" class="mt-6 space-y-4">
      <!-- pass registration fields through -->
      <input type="hidden" name="firm_name" value="<%= formData.firm_name || '' %>">
      <input type="hidden" name="fca_firm_ref" value="<%= formData.fca_firm_ref || '' %>">
      <input type="hidden" name="name" value="<%= formData.name || '' %>">
      <input type="hidden" name="email" value="<%= formData.email || '' %>">
      <input type="hidden" name="mobile_number" value="<%= formData.mobile_number || '' %>">
      <input type="hidden" name="password" value="<%= formData.password || '' %>">
      <input type="hidden" name="confirmPassword" value="<%= formData.confirmPassword || '' %>">

      <label class="flex items-start gap-3 text-sm text-slate-200">
        <input id="agree" type="checkbox" name="agree_terms" value="yes" class="mt-1" required>
        <span>I have read and agree to the Client Service Agreement.</span>
      </label>

      <button
        id="agreeBtn"
        type="submit"
        disabled
        class="w-full px-6 py-3 rounded-xl bg-emerald-500 text-slate-950 font-semibold opacity-50 cursor-not-allowed"
      >
        <%= (currentUser ? 'Agree & Continue' : 'Agree & Create Account') %>
      </button>

