<script>
  // Enable the button only after scrolling to the bottom AND ticking the checkbox
  (function () {
    const box = document.getElementById('termsBox');
    const checkbox = document.getElementById('agree');
    const btn = document.getElementById('agreeBtn');

    function update() {
      const atBottom = box ? (Math.ceil(box.scrollTop + box.clientHeight) >= box.scrollHeight) : true;
      const agreed = checkbox.checked;
      const ok = atBottom && agreed;

      btn.disabled = !ok;
      btn.classList.toggle('opacity-50', !ok);
      btn.classList.toggle('cursor-not-allowed', !ok);
      btn.classList.toggle('hover:bg-emerald-400', ok);
    }

    box.addEventListener('scroll', update);
    checkbox.addEventListener('change', update);
    update();
  })();
</script>
